#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.

location=${1:-/home/$USER}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) notify-send "ðŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;
	3) notify-send "ðŸ’½ Disk module" "\- Shows used hard drive space.
- Click to show all disk info." ;;
esac

case "$location" in
	"/home"* ) icon="" ;;
	"/mnt"* ) icon="" ;;
	*) icon="ðŸ–¥";;
esac

printf "$(df -h /root | awk ' /[0-9]/ {print $3}' | sed 's/\ $/\\n/')"
